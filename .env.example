# Variáveis de ambiente para IdosoMS

# === CONFIGURAÇÃO DO FIREBASE ===
# Substitua pelos valores do seu projeto
VITE_FIREBASE_API_KEY=sua-api-key-aqui
VITE_FIREBASE_AUTH_DOMAIN=idoso-ms.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=idoso-ms
VITE_FIREBASE_STORAGE_BUCKET=idoso-ms.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123def456

# === AMBIENTE ===
VITE_NODE_ENV=development

# === EMULADORES (desenvolvimento) ===
# Definir como 'true' para usar emuladores Firebase
VITE_USE_EMULATORS=false
VITE_AUTH_EMULATOR_HOST=127.0.0.1:9099
VITE_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
VITE_STORAGE_EMULATOR_HOST=127.0.0.1:9199

# === CONFIGURAÇÕES DA APLICAÇÃO ===
VITE_APP_NAME=IdosoMS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema de Avaliação de Vulnerabilidade de Idosos - MS

# === CONFIGURAÇÕES PWA ===
VITE_PWA_NAME=IdosoMS
VITE_PWA_SHORT_NAME=IdosoMS
VITE_PWA_THEME_COLOR=#059669
VITE_PWA_BACKGROUND_COLOR=#ffffff

# === CONFIGURAÇÕES DE CACHE ===
VITE_CACHE_SIZE_MB=50
VITE_OFFLINE_ENABLED=true

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
VITE_DEBUG_MODE=false
VITE_SHOW_LOGS=true